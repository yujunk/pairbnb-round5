<h2> All Listings </h2>

<table>
	<tr>
		<th> Id </th>
		<th> Title </th>
		<th> Location </th>
		<th> Description </th>
		<th> Price/Night </th>
		<th> Smoking </th>
		<th> By User </th>
	</tr>
	<% @listings.each do |listing| %>
		<tr>	
			<td> <%= listing.id %> </td>
			<td> <%= listing.title %> </td>
			<td> <%= listing.location %> </td>
			<td> <%= listing.description %> </td>
			<td> <%= listing.price_per_night %> </td>
			<td> <%= listing.smoking %> </td>
			<td> <%= listing.user.email %> </td>
		</tr>
	<% end %>
</table>

